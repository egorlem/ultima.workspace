{
  "scopeName": "double-slash-comment",
  "injectionSelector": [
      "L:comment.line.double-slash"
    ],
  "patterns": [
    {
      "include": "#todo-keyword-double-slash"
    },
    {
      "include": "#fixit-keyword-double-slash"
    },
    {
      "include": "#note-keyword-double-slash"
    },
    {
      "include": "#bug-keyword-double-slash"
    }
  ],
  "repository": {
    "todo-keyword-double-slash": {
      "match": "(?<=// )(TODO|todo)|(TODO|todo)(?=:)",
      "name": "keyword.todo.doubleslash"
    },
    "fixit-keyword-double-slash": {
      "match": "(?<=// )(FIXIT|fixit)|(FIXIT|fixit)(?=:)",
      "name": "keyword.fixit.doubleslash"
    },
    "note-keyword-double-slash": {
      "match": "(?<=// )(NOTE|note)|(NOTE|note)(?=:)",
      "name": "keyword.note.doubleslash"
    },
    "bug-keyword-double-slash": {
      "match": "(?<=// )(BUG|bug)|(BUG|bug)(?=:)",
      "name": "keyword.bug.doubleslash"
    }
  }
}