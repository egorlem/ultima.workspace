{
  "scopeName": "ansi",
  "injectionSelector": "L:string.quoted",
  "patterns": [
    {
      "include": "#ansi-csi"
    },
    {
      "include": "#specifiers"
    }
  ],
  "repository": {
    "ansi-csi": {
      "match": "(\\[)(\\.*\\d+m)+",
      "captures": {
        "1": { 
          "name": "constant.character.escape.sci"
        },
        "2": { 
          "name": "constant.character.escape.parameters"
        }
      }
    },
    "specifiers": {
      "match": "(%(s|d|i|f|o|O|c|j))",
      "captures": {
        "1": { 
          "name": "constant.character.escape.specifier"
        }
      }
    }
  }
}